" Pathogen
" Added on 20 Jan 2014
set nocp
execute pathogen#infect()
syntax on
filetype plugin indent on

" Solarized
" Added on 20 Jan 2014
syntax enable

" Conditionally set background color
" Added on 20 Feb 2014
if has('gui_running')
  set background=light
else
  set background=dark
  let g:solarized_termcolors=256
endif
colorscheme solarized
